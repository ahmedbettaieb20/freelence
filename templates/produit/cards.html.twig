{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .card {
            margin-bottom: 20px;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Liste des produits</h1>
        <div class="row">
            {% for produit in produits %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ asset('uploads/produit/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            
                            <p class="card-text">{{ produit.description }}</p>
                            <p class="card-text"><strong>Prix:</strong> {{ produit.prix }} TND</p>
                            <p class="card-text"><strong>Quantité:</strong> {{ produit.Qte }}</p>
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun produit trouvé</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
