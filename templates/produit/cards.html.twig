{% extends 'base.html.twig' %}

{% block title %}Catalogue des Produits{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Catalogue des Produits</h1>
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="{{ asset('uploads/produit/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <h3>{% if produit.category %}
                    {{ produit.category.getNom() }}
                {% else %}
                    <span class="text-muted">N/A</span>
                {% endif %} </h5>

                        <p class="card-text">{{ produit.description|slice(0, 100) ~ '...' }}</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-primary">{{ produit.prix }}DT</span>
                            <span class="badge bg-success">{{ produit.Qte }} en stock</span>
                        </div>
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-primary btn-block mt-auto">Voir DÃ©tails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
