{% extends 'back_base.html.twig' %}

{% block body %}
    <h1>BonDeCommande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bon_de_commande.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ bon_de_commande.date ? bon_de_commande.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ bon_de_commande.montant }}</td>
            </tr>
            <tr>
                <th>Qantite</th>
                <td>{{ bon_de_commande.quantite }}</td>
            </tr>
            <tr>
                <th>NomComercial</th>
                 <td>{% if bon_de_commande.User %}
                    {{ bon_de_commande.User.getFirstName() }}
                {% else %}
                    <span class="text-muted">N/A</span>
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ bon_de_commande.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bon_de_commande_index') }}">back to list</a>

    <a href="{{ path('app_bon_de_commande_edit', {'id': bon_de_commande.id}) }}">edit</a>

    {{ include('bon_de_commande/_delete_form.html.twig') }}
{% endblock %}
